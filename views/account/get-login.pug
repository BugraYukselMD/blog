extends ../layouts/main-layout.pug

block content
    
    if errorMessage
        
        .container.common-size.mx-auto
            .alert.alert-danger !{errorMessage}
    
    .container.for-spacing
    
    .card.border-0.common-size.mx-auto 
        .card-body
            
            form(action="/login" method="POST")
                
                input(type="hidden" name="_csrf" value=`${csrfToken}`)
                
                .container.for-spacing
                
                .row
                    .d-flex.flex-xs-column.justify-content-center
                        .text-center
                            label(for="email").col-form-label.common-text-color 
                                strong Mail Adresi
                    .d-flex.flex-xs-column.justify-content-center    
                        div
                            input.form-control#name(type="text" name="email")   

                .container.for-spacing

                .row.mx-auto
                    .d-flex.flex-xs-column.justify-content-center
                        .text-center
                            label(for="password").col-form-label.common-text-color 
                                strong Şifre
                    .d-flex.flex-xs-column.justify-content-center    
                        div 
                            input.form-control#password(type="password" name="password")  
                
                .container.for-spacing      
                
                .row
                    .d-flex.justify-content-center
                        input(type="submit" value="Giriş Yap").btn.common-content-color 
                
                .row
                    .d-flex.justify-content-center
                        a(href="/reset-password").btn.btn-link.common-text-color Şifreni mi unuttun? 