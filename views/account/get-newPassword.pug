extends ../layouts/main-layout.pug

block content
    .container
        if errorMessage
            div.alert.alert-danger.col-sm-7 !{errorMessage} 
        br
        .card(style="width: 25rem;height: 15rem;").mx-auto 
            .card-body
                form(action=`/reset-password/${passwordToken}` method="POST")
                    input(type="hidden" name="_csrf" value=`${csrfToken}`)
                    input(type="hidden" name="userId" value=`${userId}`)
                    input(type="hidden" name="passwordToken" value=`${passwordToken}`)
                    br
                    .row
                        .col-sm-4
                            label(for="password").col-form-label Şifre
                        .col-sm-8
                            input.form-control#password(type="password" name="password")
                    br        
                    .row
                        .col-sm-3
                        .col-sm-6
                            input(type="submit" value="Şifreyi Değiştir").btn.colorChangeable
                        .col-sm-3
