extends ../layouts/main-layout.pug

block content
    .container
        if errorMessage
            .container(style="width: 25rem;").mx-auto
                .alert.alert-danger !{errorMessage} 
        .container(style="height: 1rem;")
        .card(style="width: 25rem;").mx-auto 
            .card-body
                form(action=`/reset-password/${passwordToken}` method="POST")
                    input(type="hidden" name="_csrf" value=`${csrfToken}`)
                    input(type="hidden" name="userId" value=`${userId}`)
                    input(type="hidden" name="passwordToken" value=`${passwordToken}`)
                    .container(style="height: 1rem;")
                    .row
                        .col-sm-4
                            label(for="password").col-form-label Şifre
                        .col-sm-8
                            input.form-control#password(type="password" name="password")
                    .container(style="height: 1rem;")        
                    .row
                        .col-sm-3
                        .col-sm-6
                            input(type="submit" value="Şifreyi Değiştir").btn.colorChangeable
                        .col-sm-3
