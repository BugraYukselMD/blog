block append styles 
    link(rel="stylesheet" href="/css/navbar.css")
   
nav.navbar-dark.common-content-color.sticky-top
    .container 
        .row.pt-3
            .container
                .container 
                    a(href='/')#navBrand.navbar-brand GÜNDEN GÜNE DAHA İYİYE
     
        .row
            .col-sm-3 
            .col-sm-6
                ul.navbar-nav.list-group-horizontal
                    li.nav-item.mx-auto
                        a(href="/", class=(path === '/'?'nav-link active':'nav-link')) Anasayfa

                    li.nav-item.mx-auto
                        a(href="/about", class=(path === '/about'?'nav-link active':'nav-link')) Hakkımda

                    li.nav-item.mx-auto
                        a(href="/contact", class=(path === '/contact'?'nav-link active':'nav-link')) İletişim
                
                    if isAdmin
                        
                        li.nav-item.mx-auto
                            a(href="/admin/add-blog", class=(path === '/add-blog'?'nav-link active':'nav-link')) Blog Yaz
                        
                        li.nav-item.mx-auto
                            a(href="/admin/blogs", class=(path === '/adminblogs'?'nav-link active':'nav-link')) Yazılarım
            .col-sm-3
                .dropdown
                    button.dropdown-toggle#dropdownToggler(type="button" data-bs-toggle="dropdown" aria-expanded='false').btn.btn-secondary-outline.rounded-circle
                        img(src=(user?`/uploads/${user.imageUrl}`: `/uploads/default.png`) width="35" height="35").rounded-circle 
        
                    .container
                        ul.dropdown-menu(aria-labelledby="dropdownToggler")
                            if isAuthenticated
                                .row
                                    .col
                                        li
                                            a.dropdown-item(href=`/profile/${user.urlExt}`, class=(path === '/profile'?'active':'') style="text-align: center;").text-light.colorChangeable.rounded Profilim   
                                        li
                                            a.dropdown-item(href=`/favourites/${user.urlExt}`, class=(path === '/favourites'?'active':'') style="text-align: center;").text-light.colorChangeable.rounded Favorilerim
                                .row
                                    .col
                                        a.dropdown-item(href="/logout" style="text-align: center;")
                                            img(src=`/img/logout.png` width="25" height="25")
                            else 
                                li
                                    a.dropdown-item(href="/login") Giriş Yap
                                        
                                li
                                    a.dropdown-item(href="/register") Üye Ol