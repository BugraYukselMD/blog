body
    form(action="/admin/add-blog" method="POST")

        div
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            .form-group.row
                label(for="title").col-sm-2.col-form-label Blog Başlığı
                .col-sm-10 
                    input.form-control(type="text" name="title" value= `${input.title}`)               

            .form-group.row 
                label(for="body").col-sm-2.col-form-label Blog Yazısı
                .col-sm-10 
                    textarea.form-control#body(name="editor" value= `${input.body}`)   
            
            .form-group
                input(type="submit" value="Blog Yayınla").btn.btn-secondary

    script(src="/script/editor.js")
