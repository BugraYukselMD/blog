mixin commentArea(blog)
    .flex-row
        .card.border-0.card-add-comment.mx-auto 
            .card-body.mx-auto
                form(action=`/blog/${blog.urlExt}` method="POST")
                    input(type="hidden" name="_csrf" value=`${csrfToken}`)

                    .d-flex.justify-content.between.align-items-center
                        div 
                            input.form-control(type="text" id="Comment" name="comment" placeholder="Yorum yaz...") 

                        div    
                            button(type="submit" value="Yorumu YayÄ±nla").btn.btn-secondary-outline.border-0
                                img(src="/img/send.png" width="45" height="45")