mixin createBlog(blog)
    .container
        .row
            .col-sm-8
                h4
                    strong.colorChangeableTxt #{blog.title}
            if isAuthenticated
                    if !(inFav)
                        .col-sm-2
                        .col-sm-2
                            form(action=`/favourites/${blog._id}` method='POST')
                                input(type="hidden" name="_csrf" value=`${csrfToken}`)
                                button(type='submit').btn.btn-secondary-outline
                                    img(src="/img/addFav.png" width="30" height="30")
                    if inFav
                        .col-sm-2
                        .col-sm-2
                            form(action=`/delete-fav/${blog._id}` method='POST')
                                input(type="hidden" name="_csrf" value=`${csrfToken}`)
                                button(type='submit').btn.btn-secondary-outline
                                    img(src="/img/inFav.png" width="30" height="30")
        .article  
            .content
                .container
                    p !{blog.body}
        small.text-muted #{blog.date}
        hr
