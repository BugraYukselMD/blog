mixin replyArea(blog,comment)
    .flex.row
        
        form(action=`/blog/${blog.urlExt}/${comment._id}` method="POST")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)

            .d-flex.justify-content-center.align-items-center  
                div
                    input.form-control(type="text" id="Reply" name="reply" placeholder="Cevap yaz...")

                div
                    button(type="submit" value="Cevapla").btn.btn-secondary-outline.border-0
                        img(src="/img/send.png" width="50" height="40")
        
        .container.for-spacing